<div class="col-lg-3">
 		<h2>User info</h2>
			<table class='table'>
      			<tr>
      	    	<%= attachment_image_tag user, :profile_image, size: "100x100", format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>

      			</tr>
      			<tr>
    	  			<th>name</th>
    	  			<th><%= user.name %></th>
      			</tr>
      			<tr>
    	  			<th>introduction</th>
    	  			<th><%= user.introduction %></th>
      			</tr>
			</table>

			<div class='row'>
   					<p><%= link_to "", edit_user_path(user), class: "col-lg-12 btn btn-default glyphicon glyphicon-wrench" %></p>
			</div>

    	<h2>New book</h2>
    	<%= form_for(book) do |f| %>

ã€€			<% if book.errors.any? %>
  			<div id="error_explanation">
    		<h2>error: <%= book.errors.count %></h2>
    			<ul>
    				<% book.errors.full_messages.each do |message| %>
      					<li><%= message %></li>
    				<% end %>
    			</ul>
  			</div>
  			<% end %>

  			<div class="field row">
    		<label for="book_title">Title</label>
    		<%= f.text_field :title, class: "col-xs-12 book_title" %>
  			</div>

  			<div class="field row">
    		<label for="book_opinion">Opinion</label>
    		<%= f.text_area :body, class: "col-xs-12 book_body" %>
  			</div>

  			<div class="actions row">
  			<%= f.submit "Create Book", class: "btn btn-primary col-xs-12" %>
  			</div>
		<% end %>


 	</div>